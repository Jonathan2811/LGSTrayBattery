<Window x:Class="LGSTrayUI.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Notification Settings"
        Height="300" Width="400"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Low Battery Notification -->
        <CheckBox Grid.Row="0"
                  x:Name="LowBatteryCheckBox"
                  Content="Enable Low Battery Notifications"
                  Margin="0,0,0,15"
                  IsChecked="{Binding LowBatteryNotificationEnabled}"/>

        <!-- Threshold -->
        <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="20,0,0,15">
            <TextBlock Text="Battery Threshold: " VerticalAlignment="Center"/>
            <TextBox x:Name="ThresholdTextBox"
                     Width="50"
                     Text="{Binding NotificationThreshold, UpdateSourceTrigger=PropertyChanged}"
                     VerticalAlignment="Center"/>
            <TextBlock Text="%" VerticalAlignment="Center" Margin="5,0,0,0"/>
        </StackPanel>

        <!-- Cooldown -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" Margin="20,0,0,15">
            <TextBlock Text="Cooldown: " VerticalAlignment="Center"/>
            <TextBox x:Name="CooldownTextBox"
                     Width="50"
                     Text="{Binding NotificationCooldownMinutes, UpdateSourceTrigger=PropertyChanged}"
                     VerticalAlignment="Center"/>
            <TextBlock Text=" minutes" VerticalAlignment="Center" Margin="5,0,0,0"/>
        </StackPanel>

        <Separator Grid.Row="3" Margin="0,5,0,15"/>

        <!-- Charging Complete Notification -->
        <CheckBox Grid.Row="4"
                  x:Name="ChargingCompleteCheckBox"
                  Content="Enable Charging Complete Notifications"
                  Margin="0,0,0,15"
                  IsChecked="{Binding ChargingCompleteNotificationEnabled}"/>

        <!-- Close Button -->
        <Button Grid.Row="6"
                Content="Close"
                Width="80"
                HorizontalAlignment="Right"
                Click="CloseButton_Click"/>
    </Grid>
</Window>
